<br><br><br><br><br>
<div class="container">
    <div class="row">
      <div class="col-lg-12">
<p id="notice"><%= notice %></p>

<h1>Listing Productions</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Opening date</th>
      <th colspan="3"><center>Actions</center></th>
    </tr>
  </thead>

  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= production.name %></td>
        <td><%= production.company %></td>
        <td><%= production.opening_date %></td>
        <td><%= link_to 'Show', production %></td>
        <td><%= link_to 'Edit', edit_production_path(production) %></td>
        <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div></div></div>
