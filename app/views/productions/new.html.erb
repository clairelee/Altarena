<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="title">New Production</h1>

        <%= form_for @production, url: productions_path do |f| %>
        
          <p id="notice"><%= notice %></p>
          
          <p class="top_border">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
          </p>
          
          <p>
            <%= f.label :company %><br>
            <%= f.text_field :company %>
          </p>
          
          <p>
            <%= f.label :opening_date %><br>
            <%= f.text_field :opening_date %>
          </p>
          
          <p>
            <%= f.submit "Create"%>
          </p>
           
        <% end %>
      </div>
    </div>
  </div>

</body>

</html>