<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1>Profile</h1>
      <p id="notice"><%= notice %></p>
      <p class="text-center">
        <strong>Name:</strong>
        <%= @profile.name %>
      </p>
      
      <p class="text-center">
        <%= image_tag(@profile.photo_url, size: "150x150")%>
      </p>
      
      <p class="text-center">
        <a href=<%= @profile.resume_url %>>Resume</a>
      </p>
      
      <p class="text-center">
        <strong>Notes about this person:</strong>
        <br>
        <table class="table-width">
          <thead>
            <tr>
              <th>Production</th>
              <th>Role</th>
              <th>Notes</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @profile.notes.each do |note| %>
              <tr>
                <td><b><%= link_to note.production.name, note_path(note.id) %></b></td>
                <td><%= note.role %></td>
                <td><%= note.description %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </p>
      <%= link_to 'Edit', edit_profile_path(@profile) %> |
      <%= link_to 'Back', profiles_path %>

    </div>
  </div>
</div>
