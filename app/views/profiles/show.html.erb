<p class="text-center">
  <strong>Name:</strong>
  <%= @profile.name %>
</p>
<br>
<p class="text-center">
  <%= image_tag(@profile.photo_url, size: "150x150")%>
</p>
<br>
<p class="text-center">
  <a href=<%= @profile.resume_url %>>Resume</a>
</p>
<br>
<p class="text-center">
  <strong>Notes about this person:</strong>
  <tbody>
    <% @profile.notes.each do |note| %>
      <br>
      <tr>
        <th><b><%= link_to note.production.name, note_path(note.id) %></b></th>
        <td><%= note.role %></td>
        <td><%= note.description %></td>
      </tr>
    <% end %>
  </tbody>
</p>


