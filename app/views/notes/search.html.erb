
  <br><br><br><br><br>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        
        <h1>Notes</h1>
        <p class="top_border">
        </p>
        <br>

        <table border="1">
          <tr>
            <th>+</th>
            <th>Name</th>
            <th>Role</th>
            <th>Production</th>
          </tr>
         
          <% @search_result.each do |note| %>
            <tr>
              <td><%= link_to "+", new_note_path(:id => note.id), :style=> "color: #2C3E50" %></td>
              <td><%= link_to note.name, profile_path(1), :style=> "color: #2C3E50k" %></td>
              <td><%= note.role %></td>
              <td><%= note.production.name %></td>
            </tr>
          <% end %>
        </table>

        <br>  
       
      </div>
    </div>
  </div>

