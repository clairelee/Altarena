<body>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        
        <br>
        <br>
        <br>
        <br>
        <br>
        
        <h1>Listing notes</h1>
        <p class="top_border">
        </p>
        
        <p id="notice"><%= flash[:delete_notice] %></p>
        
        <br>
        <div class="centered">
          <!--<table class="index-table">-->
          <table border="1">
            <tr>
              <th>Name</th>
              <th>Role</th>
              <th colspan="3"><center>Actions</center></th>
            </tr>
           
            <% @notes.each do |note| %>
              <tr>
                <td><%= link_to note.name, profile_path(1) %></td>
                <td><%= note.role %></td>
                <td><%= link_to 'View', note_path(note) %></td>
                <td><%= link_to 'Edit', edit_note_path(note) %></td>
                <td><%= link_to 'Delete', note_path(note), method: 'delete' , data: { confirm: 'Are you certain you want to delete this?' } %></td>
              </tr>
            <% end %>
          </table>
        </div>
        

      </div>
    </div>
  </div>
  <br>
  
</body>
